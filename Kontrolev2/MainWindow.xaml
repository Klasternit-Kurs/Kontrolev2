<Window x:Class="Kontrolev2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kontrolev2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel>
		<TreeView Name="tv" DockPanel.Dock="Left" FontSize="24"/>
		<StackPanel DockPanel.Dock="Top">
			<ComboBox Name="cmb" FontSize="24" IsEditable="True" SelectionChanged="Promena"/>
			<Label Name="lbl" FontSize="24"/>
		</StackPanel>
		<ScrollViewer HorizontalScrollBarVisibility="Visible">
			<StackPanel>
				<Button Content="1" Height="200" Width="1500"/>
				<Button Content="2" Height="200"/>
				<Button Content="3" Height="200"/>
				<Button Content="4" Height="200"/>
			</StackPanel>
		</ScrollViewer>
	</DockPanel>

</Window>